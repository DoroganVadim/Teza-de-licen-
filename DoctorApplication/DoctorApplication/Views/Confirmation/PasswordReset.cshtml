@using DoctorApplication.Models.Confirmation
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PasswordResetViewModel


<h2>@Localizer["ResetPassword"]</h2>
@if (!string.IsNullOrEmpty(TempData["PasswordResetMessage"]?.ToString()))
{
    <div class="alert @Html.Raw(TempData["PasswordResetTypeMessage"])" role="alert">
        @Localizer[@TempData["PasswordResetMessage"].ToString()]
    </div>
}

<form asp-action="SendNewPassword" asp-controller="Confirmation" asp-anti-forgery="true">
    <div>
        <input type="hidden" asp-for="email" />
        <input type="hidden" asp-for="token" />
        <div class="form-group row">
            <label class="col-sm-1 col-form-label">@Localizer["Password"]:</label>
            <div class="col-sm-10">
                <input name="password" type="password" class="form-control" placeholder="@Localizer["Password"]" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-1 col-form-label">@Localizer["RepPassword"]:</label>
            <div class="col-sm-10">
                <input name="repPassword" type="password" class="form-control" placeholder="@Localizer["RepPassword"]" />
            </div>
        </div>
        <br>
        <div class="form-group">
            <input type="submit" value="@Localizer["ResetPassword"]" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
